<h1>Recipe by <%= @category %></h1>
<% @grouped_recipes.each do |category, recipes| %>
  <hr>
  <%if category.present? %>
    <b><%= link_to category.name, polymorphic_url([category, :recipes], category: category) %></b>
  <%end%>
  <br/><br/>
  <% recipes.each do |recipe| %>
    <% unless recipe.picture.blank? %>
      <%= link_to(image_tag(recipe.picture.image_url(:thumb)), recipe_path(recipe)) %> 
    <%end%>
    <br/>
    <%= recipe.name%>
    <br/>
  <%end%>
<%end%>
